{% extends 'base.html.twig' %}

{% block title %}Emails index{% endblock %}

{% block body %}
    <h1>Emails index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for email in emails %}
            <tr>
                <td>{{ email.id }}</td>
                <td>{{ email.title }}</td>
                <td>{{ email.body }}</td>
                <td>
                    <a href="{{ path('emails_show', {'id': email.id}) }}">show</a>
                    <a href="{{ path('emails_edit', {'id': email.id}) }}">edit</a>
                    <a href="{{ path('emails_send', {'id': email.id}) }}">Send</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('emails_new') }}">Create new</a>
{% endblock %}
