{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table-show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{ user.class }}</td>
            </tr>
            <tr>
                <th>Point</th>
                <td>{{ user.point }}</td>
            </tr>
        </tbody>
    </table>

    {% if 'ROLE_ADMIN' in app.user.roles %}
    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a>
    <a href="{{ path('admin_user_index') }}">back to list</a>
    {% else %}
        <a href="{{ path('user_reset_password') }}">Change Password</a>
        <a href="{{ path('app_home') }}">back to home</a>
    {% endif %}

    {{ include('backend/user/_delete_form.html.twig') }}
{% endblock %}
