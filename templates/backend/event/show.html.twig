{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table-show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ event.publishedAt ? event.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HappensAt</th>
                <td>{{ event.happensAt ? event.happensAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td class="overflow-hidden">{{ event.description }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ event.place }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_event_index') }}">back to list</a>

    <a href="{{ path('admin_event_edit', {'id': event.id}) }}">edit</a>

    {{ include('backend/event/_delete_form.html.twig') }}
{% endblock %}
