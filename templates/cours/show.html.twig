{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ cour.date ? cour.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ cour.message|raw }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_home_home') }}">back to home</a>
    {% if "ROLE_ADMIN" in app.user.roles %}
    <a href="{{ path('cours_edit', {'id': cour.id}) }}">edit</a>
        <a href="{{ path('cours_index') }}">back to list</a>
        {{ include('cours/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
